<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>addUser</servlet-name>
        <servlet-class>com.example.servletapp.servlets.UserController.addUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addUser</servlet-name>
        <url-pattern>/add-user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listUsers</servlet-name>
        <servlet-class>com.example.servletapp.servlets.UserController.listUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listUsers</servlet-name>
        <url-pattern>/list-users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>com.example.servletapp.servlets.UserController.deleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/delete-user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addVinyl</servlet-name>
        <servlet-class>com.example.servletapp.servlets.VinylController.addVinylServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addVinyl</servlet-name>
        <url-pattern>/add-vinyl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listVinyl</servlet-name>
        <servlet-class>com.example.servletapp.servlets.VinylController.listVinylServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listVinyl</servlet-name>
        <url-pattern>/list-vinyl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editVinyl</servlet-name>
        <servlet-class>com.example.servletapp.servlets.VinylController.editVinylServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editVinyl</servlet-name>
        <url-pattern>/edit-vinyl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteVinyl</servlet-name>
        <servlet-class>com.example.servletapp.servlets.VinylController.deleteVinylServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteVinyl</servlet-name>
        <url-pattern>/delete-vinyl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addVinylToCollection</servlet-name>
        <servlet-class>com.example.servletapp.servlets.UserVinylsController.addUserVinylServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addVinylToCollection</servlet-name>
        <url-pattern>/add-user-vinyl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addNewVinylToCollection</servlet-name>
        <servlet-class>com.example.servletapp.servlets.UserVinylsController.addNewUserVinylServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addNewVinylToCollection</servlet-name>
        <url-pattern>/add-new-user-vinyl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listUserVinyl</servlet-name>
        <servlet-class>com.example.servletapp.servlets.UserVinylsController.listUserVinylServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listUserVinyl</servlet-name>
        <url-pattern>/list-user-vinyl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteVinylFromCollection</servlet-name>
        <servlet-class>com.example.servletapp.servlets.UserVinylsController.deleteUserVinylServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteVinylFromCollection</servlet-name>
        <url-pattern>/delete-user-vinyl</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.example.servletapp.utils.HibernateListener</listener-class>
    </listener>
</web-app>